{
  "name": "mern",
  "version": "0.1.1",
  "description": "",
  "main": "index.js",
  "PUBLIC_URL": "https://mern-stack-boilerplat.herokuapp.com/",
  "home": "https://mern-stack-boilerplat.herokuapp.com/",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node --tls-min-v1.0 --optimize_for_size --max_old_space_size=460 index.js prod NODE_ENV=production ",
    "start:prod-no-cluster": "node index.js no-cluster prod",
    "start:dev": "concurrently \"nodemon '--tls-min-v1.0' index --ignore 'client/*'\" \"npm run client\"",
    "start:dev-no-cluster": "concurrently \"nodemon index no-cluster --ignore 'client/*'\" \"npm run client\"",
    "start:dev-no-ssr": "concurrently \"nodemon index no-ssr --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "npm run lint",
    "lint": "eslint --quiet **.js",
    "fix": "eslint --fix **.js",
    "watch": "nodemon server.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "concurrently": "^4.1.0",
    "eslint": "5.12.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^1.18.7",
    "prettier": "^1.13.7"
  },
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.7",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.7",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.3",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-session": "^1.17.0",
    "if-env": "^1.0.4",
    "ignore-styles": "^5.0.1",
    "image-downloader": "^3.5.0",
    "ioredis": "^4.14.1",
    "jimp": "^0.9.3",
    "js-cookie": "^2.2.1",
    "memorystore": "^1.6.1",
    "mongoose": "^5.3.16",
    "morgan": "^1.9.1",
    "node-gyp": "^6.1.0",
    "opencv.js": "^1.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "redis": "^2.8.0",
    "rgb-hex": "^3.0.0",
    "session": "^0.1.0"
  }
}
